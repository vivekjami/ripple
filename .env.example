# ================================
# Server Configuration
# Controls how the Ripple server runs
# ================================
RIPPLE_HOST=0.0.0.0
RIPPLE_PORT=8080
RIPPLE_WORKERS=4

# ================================
# Qdrant Configuration
# Vector database connection details
# ================================
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=cache_vectors

# ================================
# Embedding Model Configuration
# Controls embedding model loading
# ================================
EMBEDDING_MODEL_PATH=./models/nomic-embed-text.onnx
EMBEDDING_DIMENSION=768

# ================================
# Cache Configuration
# Controls semantic cache behavior
# ================================
SIMILARITY_THRESHOLD=0.85
CACHE_TTL_HOURS=168
MAX_CACHE_SIZE=10000000

# ================================
# Logging Configuration
# Application logging level
# ================================
LOG_LEVEL=info
